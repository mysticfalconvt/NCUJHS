mixin userTable(users={})
    table.table
        thead
            td
                a(href="/user/search/name")=`Name:   ${studentCallbackCount} students are on callback ${percentageOnCallback}% of ${studentCount} students`
            td
                a(href="/user/search/ta") TA
            td
                a(href="/user/search/callbackCount")=`callback total: ${callbackCount}`
            td
                a(href="/user/search/cellPhoneCount") Cell Violations
            td
                a(href="/user/search/pbisCount") Week Business Cards
            td
                a(href="/user/search/yearPbisCount") Total Business Cards
            td
                a(href="/user/search/parent") Parent

        each user in users
            tr
                td
                    a(href=`/user/${user._id}`) #{user.name}
                if user.ta
                    td
                        a(href=`/user/${user.ta._id}`)=user.ta.name
                else
                    td
                if user.callbackCount
                    td=user.callbackCount
                else
                    td
                if user.permissions.includes("student") && user.cellPhoneCount
                    td=user.cellPhoneCount
                else
                    td
                if user.permissions.includes("student")
                    td=user.pbisCount
                else
                    td=user.taPbisCount
                if user.permissions.includes("student")
                    td=user.yearPbisCount
                else
                    td
                if user.permissions.includes("student")
                    if user.parent
                        if user.parent[0]
                            td 🗹
                        else
                            td ☐
                