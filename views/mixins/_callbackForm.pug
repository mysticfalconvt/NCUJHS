mixin callbackForm(callback = {})
  form(action=`/callback/add/${callback._id || ''}` method="POST" class="card" )
    label(for="assignment") Assignment
    input(type="text" name="assignment" value=callback.assignment)
    label(for="description") Description
    textarea(name="description")= callback.description
    .search
      label(for="student") student
      if callback.student
        .search__input
          input(name="student" value=callback.student._id)
      else
        .search__input
        input(name="student" value=callback.student)
      .search__results
      if callback.student
        label(for="completed") Assignment Completed
        input(type="checkbox" name="completed" checked=callback.completed value="true")
       
    input(type="submit" value="Save â†’" class="button")
