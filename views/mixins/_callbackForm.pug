mixin callbackForm(callback = {})
  form(action=`/callback/add/${callback._id || ''}` method="POST" class="card" )
    label(for="assignment") Assignment 
    input(type="text" name="assignment" value=callback.assignment)
    label(for="description") Description
    textarea(name="description")= callback.description

    label(for="studentName") student Name
    .student
      if callback.student
        input(name="studentName" value=callback.student.name disabled="disabled")
      else
        input(name="studentName" id="search" type="text" value=callback.student)
      .search
        .search__results
    label(for="linkTitle") Link
    textarea(name="link")= callback.link
    label(for="linkTitle") Link Title
    textarea(name="linkTitle")= callback.linkTitle
    hr
    if callback.student
      .radioContainer
        if callback.completed
          input(type="radio" name="completed" id="callbackCompletedTrue" checked value="true")
          label(for="callbackCompletedTrue") 
            span.radio Assignment Completed
          input(type="radio" name="completed" id="callbackCompletedFalse" value="")
          label(for="callbackCompletedFalse") 
            span.radio Assignment Incomplete
        else
          input(type="radio" name="completed" id="callbackCompletedTrue" value="true")
          label(for="callbackCompletedTrue") 
            span.radio Assignment Completed
          input(type="radio" name="completed" id="callbackCompletedFalse" checked value="")
          label(for="callbackCompletedFalse") 
            span.radio Assignment Incomplete
      
  
    if callback.student
      .search__input
        input(name="student" id="id" value=callback.student._id hidden)
    else
      .search__input
      input(name="student" id="id" value=callback.student hidden)
      
    input(type="submit" value="Save â†’" class="button")
  