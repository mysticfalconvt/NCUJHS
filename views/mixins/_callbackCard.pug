mixin callbackCard(callback={})
    .callback
        .callback__hero
            img(src=`/uploads/callback.png`)
            h2.title
                a(href=`/callback/${callback._id}`) #{callback.assignment}
                p=callback.student.name +" - " + callback.assigned.toDateString()
                p=callback.teacher.name
        .callback__details
            p=callback.description.split(' ').slice(0,20).join(' ')
            if callback.message
                p.message=callback.message.split(' ').slice(0,20).join(' ')