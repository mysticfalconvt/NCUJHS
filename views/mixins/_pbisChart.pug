mixin pbisChart(dateLabels = [], cardNumbers=[])
    script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js")
    .chart-container
    
    canvas#myChart(height="20vh" width="90%")      
    script.
        var ctx = document.getElementById("myChart").getContext('2d');
        const data = !{JSON.stringify(cardNumbers)}
        const label= !{JSON.stringify(dateLabels)}
        var myChart = new Chart(ctx, {
        type: 'line',
        data: {
        labels: label,
        datasets: [{
        label: 'Cards given per week',
        type: 'line',
        data: data,
        yAxiId: 'y-axis-0',
        backgroundColor: [
        'rgba(255, 50, 50, 0.2)',
        ],
        borderColor: [
        'rgba(0,0,132,1)',
        ],
        borderWidth: 2
        },
        ]
        },
        options: {
        scales: {
        yAxes: [{
        position: "left",
        id: "y-axis-1",
        beginAtZero: true,
        type: 'linear',
        stacked: false,
      }, {
        position: "left",
        id: "y-axis-0",
        beginAtZero: true,
        type: 'label',
        stacked: false,
      }]
        }
        }
        });  