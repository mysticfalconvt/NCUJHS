mixin calendarForm(calendar = {})
  form(action=`/add/${calendar._id || ''}` method="POST" class="card" )
    label(for="title") Event Title
    input(type="text" name="title" value=calendar.title)
    label(for="Date") Event Date
    if calendar.Date
      input(type="text" name="Date" value=calendar.Date.toDateString())
    else
      input(type="text" name="Date" value="mm/dd/yyyy")
    label(for="description") Description
    textarea(name="description")= calendar.description
    label(for="linkTitle") Link
    textarea(name="link")= calendar.link
    label(for="linkTitle") Link Title
    textarea(name="linkTitle")= calendar.linkTitle
    hr
    if calendar
      if calendar.teachersOnly
        label(for="teachersOnly") Event for teachers only
        input(type="radio" name="teachersOnly" checked value="true")
        label(for="teachersOnly") Event for everyone
        input(type="radio" name="teachersOnly" value="")
      else
        label(for="teachersOnly") Event for teachers only
        input(type="radio" name="teachersOnly" value="true")
        label(for="teachersOnly") Event for everyone
        input(type="radio" name="teachersOnly" checked value="")
    hr
    input(type="submit" value="Save â†’" class="button")
