mixin progressForm(student = {})
    label(for=`${student._id}`)=student.name + " - "
            select(type="text" name=`${student._id}` )
                option(value="-1" selected) None
                option(value="0" ) 0
                option(value="1" ) 1
                option(value="2" ) 2
                option(value="3" ) 3
                option(value="4" ) 4
                option(value="5" ) 5