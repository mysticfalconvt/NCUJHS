mixin pbisForm(pbis = {})
    form(action=`/pbis/add/${pbis._id || ''}` method="POST" class="card" )
        label(for="studentName") student Name
        .student
            if pbis.student
                input(name="studentName" value=pbis.student.name disabled="disabled")
            else
                input(name="studentName" id="search" type="text" value=pbis.student)
            .search
                .search__results

        if pbis.student
            .search__input
                input(name="student" id="id" value=pbis.student._id hidden)
        else
            .search__input
                input(name="student" id="id" value=pbis.student hidden)

        label(for="message") Message
        textarea(name="message")= pbis.message

        .radioContainer
            input(type="radio" name="category" id="Respect" checked value="Respect")
            label(for="Respect") 
                span.radio Respect
            input(type="radio" name="category" id="Responsibility" value="Responsibility")
            label(for="Responsibility") 
                span.radio Responsibility
            input(type="radio" name="category" id="Perserverance" value="Perserverance")
            label(for="Perserverance") 
                span.radio Perserverance

        input(type="submit" value="Save â†’" class="button")
