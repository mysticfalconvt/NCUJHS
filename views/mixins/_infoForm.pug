mixin infoForm(info = {})
  form(action=`/info/add/${info._id || ''}` method="POST" class="card" )
    label(for="title") Title
    input(type="text" name="title" value=info.title)
    label(for="description") Description
    textarea(name="description")= info.description
    label(for="category") Category
    select(type="text" name="category" value=`${info.category || "General Info"}`)
      option(value="General Info") General Info
      option(value="Remote Learning") Remote Learning
      option(value="Discipline") Discipline
      option(value="Student Info") Student Info
      option(value="Schedule") Schedule
      option(value="TA Info") TA Info
      option(value="Eval Info") Eval Info
      option(value="School Wide Info") School Wide Info
      option(value="Reflection") Reflection
    label(for="link") Link
    input(type="text" name="link" value=`${info.link || ""}`)
    label(for="linkTitle") Link Title
    input(type="text" name="linkTitle" value=`${info.linkTitle || ""}`)
    hr
    if info
      if info.teachersOnly
        label(for="teachersOnly") Link for teachers only
        input(type="radio" name="teachersOnly" checked value="true")
        label(for="teachersOnly") Link for everyone
        input(type="radio" name="teachersOnly" value="")
      else
        label(for="teachersOnly") Link for teachers only
        input(type="radio" name="teachersOnly" value="true")
        label(for="teachersOnly") Link for everyone
        input(type="radio" name="teachersOnly" checked value="")
    hr
    input(type="submit" value="Save â†’" class="button")
