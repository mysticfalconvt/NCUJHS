mixin callbackTable(callbacks={})
    p <strong> Assigned Callback </strong>
    table.table
        thead
            td Student
            td Assignment
            //- td Description
            td Message
            td Date Assigned
            td Completed
        each callback in callbacks
            tr
                td
                    a(href=`/user/${callback.student._id}`)=callback.student.name
                td
                    a(href=`/callback/${callback._id}`)=callback.assignment
                //- td=callback.description
                td
                    a(href=`/callback/${callback._id}`)=callback.message
                td=callback.assigned.toDateString()
                td
                    if user._id.equals(callback.teacher._id)
                        if callback.completed
                            span Completed
                        else
                            form(action=`/callback/add/${callback._id || ''}` method="POST" class="" )
                            input(type="radio" name="completed" checked value="true" hidden)
                            input(type="submit" value="Mark Completed âœ…" class="")
                    else
                        if callback.completed
                            span Completed
                        
