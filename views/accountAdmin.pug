extends layout

block content
    .inner
        h2= `Edit ${account.name}'s Account`
        //- add a link to change their password
        form(action=`/user/edit/:${account._id}` method="post")
            label(for="name") Name
            input(type="text" name="name" value=account.name) 
            label(for="email") Email Address
            input(type="text" name="email" value=account.email)
            label(for="isTeacher") TA Teacher
            input(type="text" name="isTeacher" value=account.isTeacher)
            label(for="isTeacher") Teacher
            input(type="checkbox" name="isTeacher" checked=account.isTeacher )
            input.button(type="submit" value="Update My Account")